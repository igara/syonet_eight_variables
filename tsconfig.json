{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "baseUrl": "./",
    "paths": {
      "@design_system/*": ["./*"]
    }
  },
  "include": ["../../types/**.ts", "src/*"]
}
